<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Purple Outline -->
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#00000000"/> <!-- Transparent fill -->
            <stroke
                android:width="4dp"
                android:color="@color/primary_purple"/> <!-- Purple color -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- Thin Black Circle (Inner Border) -->
    <item android:top="3dp" android:left="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="oval">
            <solid android:color="#000000"/> <!-- Transparent fill -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

    <!-- White Circle -->
    <item android:top="7dp" android:left="7dp" android:right="7dp" android:bottom="7dp">
        <shape android:shape="oval">
            <solid android:color="@color/primary_dark"/> <!-- White background -->
            <corners android:radius="50dp"/>
        </shape>
    </item>

</layer-list>
