<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Purple Outline -->
<item>
    <shape android:shape="oval">
        <solid android:color="#00000000"/> <!-- Transparent fill -->
        <stroke
            android:width="4dp"
        android:color="@color/primary_purple"/> <!-- Purple color -->
        <corners android:radius="50dp"/>
    </shape>
</item>

<!-- White Circle -->
<item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
    <shape android:shape="oval">
        <solid android:color="#FFFFFF"/> <!-- White background -->
        <corners android:radius="50dp"/>
    </shape>
</item>
</layer-list>
